<%= content_tag :button,
  class: @classes,
  type: 'button',
  data: {
    toggle: 'collapse',
    target: "##{@panel_id}",
    'bs-toggle': 'collapse',
    'bs-target': "##{@panel_id}"
  },
  aria: {
    controls: @panel_id,
    expanded: 'false',
  } do %>
  <span data-show-label><%= t('blacklight.search.facets.group.open') %></span>
  <span data-hide-label><%= t('blacklight.search.facets.group.close') %></span>
<% end %>
